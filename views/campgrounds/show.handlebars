{{> header}}

</div>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="img-thumbnail show" src="{{campground.image}}" alt=" {{campground.name}}">
                <div class="caption-full">
                    <div class="card-title">
                        <h4 class="float-right">$9.00/night</h4>
                        <h4><a href="/campgrounds">{{campground.name}}</a></h4>
                        <p>{{campground.description}}</p>
                        <p><em>Submitted by: </em>{{campground.author.username}}</p>

                        {{!-- Need to write a conditional to determine if a user is logged in AND if so, if that user id matches the author id of the content to be edited/deleted, basically, checking if the logged in user created the content. --}}

                        {{!=======================================================}}

                        <a class="btn btn-warning" href="/campgrounds/{{campground._id}}/edit">Edit</a>
                        <form id="delete-form" action="/campgrounds/{{campground._id}}?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        {{!========================================================}}

                    </div>
                </div>

            </div>
            <div class="card-footer mt-4">
                <div class="text-right">
                    <p><a class="btn btn-success" href="/campgrounds/{{campground._id}}/comments/new">Add New
                            Comment</a></p>
                </div>
                <hr>
                {{#each campground.comments}}
                <div class="row">
                    <div class="col-md-12">
                        <strong>{{author.username}}</strong>
                        <span class="float-right">10 days ago</span>
                        <p>{{text}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{!-- <h1>This is the show page!</h1> --}}
</div>
{{> footer}}